	%>
		<tr>
		<% for(int j=0; j<=8; j++){ 
		%>
			<td bgcolor="
				<% 
				if(i+j %2 == 0){
				%>
					black">
				<%
				}else{
				%>
					white">
				<%
				}
				%>
			
			</td>
			<%
			} 
			%>		
		</tr>
	<%
	}
